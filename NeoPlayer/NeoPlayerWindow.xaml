<Window x:Class="NeoPlayer.NeoPlayerWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="NeoPlayer" Width="800" Height="600" Background="Black" WindowStyle="None" ResizeMode="NoResize" WindowState="Maximized">

	<Grid Name="visual">
		<Image Name="previous" Cursor="None"/>
		<Grid Name="slide" Background="Black" Opacity="0" Cursor="None">
			<Image Name="slideImage"/>
		</Grid>
		<Grid Name="media" Background="Black" Opacity="0" Cursor="None">
			<MediaElement Name="mediaPlayer" LoadedBehavior="Manual"/>
		</Grid>
	</Grid>

</Window>
