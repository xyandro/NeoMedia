<Window x:Class="NeoPlayer.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:vlc="clr-namespace:AxAXVLC;assembly=AxInterop.AXVLC"
	Title="NeoPlayer" Width="800" Height="600" Background="Black" WindowStyle="None">

	<Grid>
		<Image Name="slide1"/>
		<Grid Name="fadeSlide" Background="Black" Opacity="0">
			<Image Name="slide2"/>
		</Grid>
		<WindowsFormsHost Name="vlcHost">
			<vlc:AxVLCPlugin2 x:Name="vlc"/>
		</WindowsFormsHost>
	</Grid>

</Window>
